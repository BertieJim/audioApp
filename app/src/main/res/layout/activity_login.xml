<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#343348">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#22343348"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginBottom="40dip"
            android:layout_marginTop="10dp"
            android:layout_gravity="top">
            <Button
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:onClick="LogIn_Failed"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/close"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            >
            <EditText
                android:id="@+id/login_input_phone_et"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:background="#343348"
                android:textColorHint="#DCDCDC"
                android:textColor="#DCDCDC"
                android:hint="用户名"
                android:inputType="phone" />
            <View
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#7FD6D6D6" />


            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="270.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/roundButton"
                    android:textSize="20sp"
                    android:textColor="#625EA3"
                    android:text=" 登录 "
                    android:onClick="LogIn_Success"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="35dip"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/cb_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:textSize="22dp"
                        android:text="自动登录"
                        android:checked="false"
                        android:textColor="#DCDCDC" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>