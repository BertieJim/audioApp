<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#343348">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#22343348"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginBottom="40dip"
            android:layout_marginTop="10dp"
            android:layout_gravity="top">
            <Button
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:onClick="Out"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/close"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            >

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txt_text"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:ems="10"
                    android:background="#343348"
                    android:layout_weight="1.0"
                    android:textColor="#DCDCDC"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#7FD6D6D6" />
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="270.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/btn_record"
                    android:textSize="20sp"
                    android:textColor="#625EA3"
                    android:text=" 录音 "
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="270.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/btn_playaudio"
                    android:textSize="20sp"
                    android:textColor="#625EA3"
                    android:text=" 播放录音 "
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="270.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/btn_uploadaudio"
                    android:textSize="20sp"
                    android:textColor="#625EA3"
                    android:text=" 确认上传 "
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="270.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/txt_checknum"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:ems="10"
                    android:background="#343348"
                    android:layout_weight="1.0"
                    android:textColor="#DCDCDC"
                    android:textSize="16sp"
                    />
            </LinearLayout>







        </LinearLayout>

    </FrameLayout>
</LinearLayout>